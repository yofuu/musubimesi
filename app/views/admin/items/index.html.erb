<div class="mx-auto" style="width: 300px;">
<h4>結びめし一覧</h4>

<table>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <!--商品画像-->
        <td><%#= ここにリンクtoを書く %>
          <%= image_tag item.get_image(100,100) %></td>
        <!--商品名-->
        <td><%= link_to admin_item_path(item.id) do %>
         <div style="font-size:x-large">
          <%= item.name %>
         </div>
          <% end %>
        </td>
        <!--投稿者-->
        <% if item.customer.present? %>
          <td><%= item.customer.name %></td>
        <% else %>
          <td></td>
        <% end %>
        <!--いいねの数-->
        <td><%= item.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
</div>
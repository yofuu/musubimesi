<div class="mx-auto" style="width: 500px;">
<h4>結びめし一覧</h4>

<table width="500" cellpadding="10">
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <!--商品画像-->
        <td width="30%"><%= link_to admin_item_path(item.id) do %>
          <%= image_tag item.get_image(150,150) %>
          <% end %>
        </td>
        <!--商品名-->
        <td width="15%"><%= link_to admin_item_path(item.id) do %>
         <div style="font-size:x-large">
          <%= item.name %>
         </div>
          <% end %>
        </td>
        <!--投稿者-->
        <td width="15%"><%= link_to admin_customer_path(item.customer.id) do %>
          <div style="font-size:x-large">
           <%= item.customer.name %>
          </div>
        </td>
        <% end %>
        <!--いいねの数-->
        <td>いいね数<%= item.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
</div>
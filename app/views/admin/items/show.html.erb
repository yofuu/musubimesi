<div class="mx-auto" style="width: 300px;">
<h4>結びめし詳細</h4>

<table>
<tbody>
  <tr>
    <!--画像-->
   <th><%= image_tag @item.get_image(100,100) %></th>

    <!--名前-->
   <th><%= @item.name %></th>

    <!--商品詳細-->
   <th><%= @item.introduction %></th>

    <!--ジャンル-->
   <th><%= @item.genre.name %></th>

   <!--いいねの数-->
    <th><%= @item.favorites.count %></th>
  </tr>
</tbody>

<%= link_to "投稿を削除する", admin_item_path(@item.id), method: :delete %>

</table>
<!--コメント-->
<tbody>
  <% @item.comments.each do |comment| %>
   <tr>
    <!--コメントを書いた会員-->
    <td><%= comment.customer.name %></td>
    <!--コメントの内容が表示される-->
    <td><%= comment.body %></td>
    <!--コメント削除-->
    <td><%= link_to "コメントを削除", admin_comment_path(comment.id), method: :delete %></td>
   </tr>
  <% end %>
</tbody>
</div>
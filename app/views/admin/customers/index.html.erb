<div class="mx-auto" style="width: 500px;">
<h4>顧客一覧</h4>

<table width="500" cellpadding="10">
  <thead>
      <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>登録日時</th>
          <th>ステータス</th>
      </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <!--顧客名-->
        <td><%= link_to admin_customer_path(customer.id) do %>
         <div style="font-size:x-large">
            <%= customer.name %>
         </div>
            <% end %>
        </td>
        <!--メールアドレス-->
        <td>
          <div style="font-size:x-large">
            <%= customer.email %>
          </div>
        </td>
        <!--登録日時-->
        <td><%= customer.created_at %></td>
        <!--ステータス-->
        <td><% if customer.is_deleted==true %>
            退会
            <% else %>
            有効
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= paginate @customers %>
</div>
<div class="mx-auto" style="width: 300px;">
<h4>顧客一覧</h4>

<table>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <!--顧客名-->
        <td><%= link_to admin_customer_path(customer.id) do %>
        <%= customer.name %>
        <% end %>
        </td>
        <!--メールアドレス-->
        <td><%= customer.email %></td>
        <!--登録日時-->
        <td><%= customer.created_at %></td>
        <!--ステータス-->
        <td><% if customer.is_deleted==true %>
            退会
            <% else %>
            有効
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
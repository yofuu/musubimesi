<!--名前-->
<h4><%= @customer.name %></h4>
<!--メールアドレス-->
<%= @customer.email %>
<!--ステータス-->
<% if @customer.is_deleted==true %>
  退会
<% else %>
  有効
<% end %>

<tbody>
    <% @items.each do |item| %>
      <tr>
        <!--商品画像-->
        <td><%= link_to admin_item_path(item.id) do %>
          <%= image_tag item.get_image(100,100) %>
          <% end %>
        </td>
        <!--商品名-->
        <td><%= link_to admin_item_path(item.id) do %>
         <%= item.name %>
         <% end %>
        </td>
        <!--いいねの数-->
        <td><%= item.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>結びめし登録</h4>

<%= form_with model: @item, url:items_path, method: :post do |f| %>

<table>
 <tbody>
 <tr>
  <td>商品画像</td>
  <td><%= f.file_field :image %></td>
 </tr>

 <tr>
  <td>商品名</td>
  <td><%= f.text_field :name %></td>
 </tr>

 <tr>
  <td>商品説明</td>
  <td><%= f.text_area :introduction %></td>
 </tr>

 <tr>
  <td>ジャンル</td>
  <td><%= f.collection_select(:genre_id, @genres, :id, :name )  %></td>
 </tr>

 </tbody>
</table>
 <%= f.submit '新規登録' %>
<% end %>
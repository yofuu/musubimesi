<div class="mx-auto" style="width: 500px;">
<h4>検索結果 "<%= @keyword %>"</h4>
<table width="400" cellpadding="10">
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <!--商品画像-->
        <td width="30%"><%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(100,100) %>
          <% end %>
        </td>
        <!--商品名-->
        <td><%= link_to item_path(item.id) do %>
         <%= item.name %>
         <% end %>
        </td>
        <!--投稿者-->
        <% if customer_signed_in? && (item.customer.id == current_customer.id) %>
         <td><%= link_to customers_mypage_path do %>
              <%= item.customer.name %>
             <% end %>
         </td>
        <% else %>
         <td><%= link_to customer_path(item.customer.id) do %>
              <%= item.customer.name %>
             <% end %>
         </td>
        <% end %>
        <!--いいねの数-->
        <td>いいね数<%= item.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
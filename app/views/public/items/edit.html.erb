<div class="mx-auto" style="width: 400px;">
<h4>編集</h4>

<%= form_with model: @item, url:item_path(@item.id), method: :patch do |f| %>
<table>
<tbody>
 <tr>
　<td>商品画像</td>
  <td><%= f.file_field :image %></td>
 </tr>

 <tr>
  <td>商品名</td>
  <td><%= f.text_field :name %></td>
 </tr>

 <tr>
  <td>商品説明</td>
  <td><%= f.text_area :introduction %></td>
 </tr>

 <tr>
  <td>ジャンル</td>
  <td><%= f.collection_select(:genre_id, @genres, :id, :name )  %></td>
 </tr>
</tbody>
</table>

 <%= f.submit '変更を保存する' %>
<% end %>
</div>
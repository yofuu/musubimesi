<div class="mx-auto" style="width: 300px;">
<h4>編集</h4>

<%= form_with model: @customer, url:customer_path(@customer.id), method: :patch do |f| %>
<table>
<tbody>

 <tr>
  <td>名前</td>
  <td><%= f.text_field :name %></td>
 </tr>

 <tr>
  <td>メールアドレス</td>
  <td><%= f.text_area :email %></td>
 </tr>

</tbody>
</table>

 <%= f.submit '変更を保存する' %>
<% end %>
</div>
